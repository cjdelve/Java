package com.objects.java;

/**
 * Create instances of the Employee object, as well as calculate pay and display
 * all user information.
 *
 */
public class Main {

    /**
     * Main method sending required arguments to connected classes.
     * @param args The class contains a kwarg.
     */
    public static void main(String[] args) {

       Employee emp1 = new Employee("Jane Doe", employeeType.ADMINISTRATION, true, 27.00, 1, "10/6/17");
       emp1.calculate(45.00);

       Employee emp2 = new Employee("Larry Jackson", employeeType.PRODUCTION, false, 22.00, 2, "10/6/17");
       emp2.calculate(50.00);

       Employee emp3 = new Employee("John Smith", employeeType.MAINTENANCE, false, 21.00, 3, "10/6/17");
       emp3.calculate(35.00);

       // System.out.println(employeeType.ADMINISTRATION);
    }
}
